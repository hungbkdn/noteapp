<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".MainActivity"

    android:background="@mipmap/background">



    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"

        android:layout_width="match_parent"

        android:layout_height="?attr/actionBarSize"

        android:background="@android:color/darker_gray"

        android:theme="@style/ThemeOverlay.AppCompat.Dark" />



    <EditText

        android:gravity="center"

        android:hint="Describtion"

        android:textColor="#2299de"

        android:layout_weight="1.08"

        android:textColorHint="@color/common_google_signin_btn_text_dark_default"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:inputType="textMultiLine"

        android:ems="10"

        android:id="@+id/idText"

        android:layout_below="@+id/toolbar"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"

        android:layout_alignParentRight="true"

        android:layout_alignParentEnd="true" />



    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="50dp"

        android:layout_weight="18.11"

        android:gravity="center"

        android:orientation="horizontal"

        android:layout_below="@+id/idText"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"

        android:layout_marginTop="431dp"

        android:layout_alignParentBottom="true">



        <Button

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight=".49"

            android:background="#2299de"

            android:text="SET DATE"

            android:textColor="#fff"

            android:textStyle="bold"

            android:id="@+id/idButton1"

            android:gravity="center" />

        <View

            android:layout_height="fill_parent"

            android:layout_margin="10dp"

            android:background="@color/common_google_signin_btn_text_dark_default"

            android:layout_width="2sp" />

        <Button

            android:background="#2299de"

            android:text="SET TIME"

            android:textColor="#fff"

            android:textStyle="bold"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight=".49"

            android:id="@+id/idButton2"

            android:gravity="center" />

    </LinearLayout>



    <LinearLayout

        android:layout_width="fill_parent"

        android:layout_height="50dp"

        android:layout_weight="18.11"

        android:gravity="center"

        android:orientation="horizontal"

        android:layout_marginBottom="34dp"

        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true">



        <TextView

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight=".49"

            android:gravity="center"

            android:textStyle="bold"

            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:id="@+id/loinhac" />



        <View

            android:layout_width="2dp"

            android:layout_height="fill_parent"

            android:layout_margin="10dp"

            android:background="#000" />



        <TextView

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight=".49"

            android:gravity="center"

            android:textStyle="bold"

            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:id="@+id/timefin" />

    </LinearLayout>



</RelativeLayout>
